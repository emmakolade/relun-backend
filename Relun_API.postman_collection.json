              "path": ["api", "profile", ":userId"],
              "variable": [
                {
                  "key": "userId",
                  "value": "user_id_here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Swipe",
      "item": [
        {
          "name": "Get Potential Matches",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/swipe/potential?limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "swipe", "potential"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Create Swipe (Like)",
          "request": {
            "auth": {
              "type": "bearer",
