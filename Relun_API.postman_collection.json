                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"targetUserId\": \"user_id_here\",\n  \"swipeType\": \"like\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/swipe",
              "host": ["{{base_url}}"],
              "path": ["api", "swipe"]
            }
          }
        },
        {
          "name": "Create Swipe (Dislike)",
          "request": {
            "auth": {
              "type": "bearer",
