                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/swipe?page=1&limit=20&swipeType=like",
              "host": ["{{base_url}}"],
              "path": ["api", "swipe"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "swipeType",
                  "value": "like",
                  "description": "Optional: like, dislike, or superlike"
                }
              ]
            }
          }
        }
      ]
    },
