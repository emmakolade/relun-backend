                }
              ]
            },
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/profile/photos/:photoId",
              "host": ["{{base_url}}"],
              "path": ["api", "profile", "photos", ":photoId"],
              "variable": [
                {
                  "key": "photoId",
                  "value": "photo_id_here"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}"
                }
